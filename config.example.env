# -------------------------
# Storage (Render vs local)
# -------------------------
# Local dev:
DATA_DIR=./data
DB_PATH=./data/app.db

# Render (recommended):
# DATA_DIR=/var/data
# DB_PATH=/var/data/app.db
# HOST=0.0.0.0

# -------------------------
# OpenAI (STT + LLM)
# -------------------------
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4.1
OPENAI_STT_MODEL=whisper-1

# -------------------------
# Twilio (required)
# -------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+9725XXXXXXXX

# Public base URL of your app (Render URL). No trailing slash.
VOICE_WEBHOOK_URL=https://your-service.onrender.com

# -------------------------
# TTS Provider
# -------------------------
# Options: gemini | elevenlabs | openai | google
TTS_PROVIDER=elevenlabs

# ---- ElevenLabs (best "human" voice / voice clone) ----
ELEVENLABS_API_KEY=your_elevenlabs_key
# If you use ONE cloned voice for everything:
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id
# If you prefer different voices per persona:
# ELEVENLABS_VOICE_MALE=voice_id_for_male_persona
# ELEVENLABS_VOICE_FEMALE=voice_id_for_female_persona
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_STABILITY=0.4
ELEVENLABS_SIMILARITY_BOOST=0.8

# ---- Gemini AI Studio TTS (current setup) ----
# TTS_PROVIDER=gemini
# GEMINI_API_KEY=your_gemini_key
# GEMINI_TTS_MODEL=gemini-2.5-pro-preview-tts
# GEMINI_TTS_VOICE_NAME=Zephyr
# GEMINI_TTS_TIMEOUT_MS=8000

# -------------------------
# Recording tuning (reduce "לא הבנתי" + cutoffs)
# -------------------------
RECORD_MAX_LENGTH_SECONDS=6
RECORD_TIMEOUT_SECONDS=2
RECORD_TIMEOUT_MIN_SECONDS=2
NO_SPEECH_MAX_RETRIES=2

# -------------------------
# Debug
# -------------------------
DEBUG_TTS=0


